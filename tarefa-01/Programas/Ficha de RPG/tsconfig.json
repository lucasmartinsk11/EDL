{
    "compilerOptions": {
        "outDir": "build",
        "target": "es5",
        "module": "es6",
        "typeRoots":[
            ".../node_modules/@types"
        ],
        "noImplicitAny": true
    },
    "include":[
        "**/*.ts",
        "*.ts",
    ],
    "exclude":[
        "node_modules"
    ],
    "buildOnSave":true,
    "compileOnSave":true
}